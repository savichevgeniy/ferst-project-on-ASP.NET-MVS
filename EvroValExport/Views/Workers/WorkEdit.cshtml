        </div>



        <div class="col-md-10">
            @Html.HiddenFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
        </div>



        <div class="col-md-10">
            @Html.HiddenFor(model => model.CurrentTime, new { htmlAttributes = new { @class = "form-control" } })
