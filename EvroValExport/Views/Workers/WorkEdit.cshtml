@model EvroValExport.Models.Workers

@{
    ViewBag.Title = "Редактирование запись";
}
<div class=" contacts ">
    <h2>Редактирование записи</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Работник:</h4>
