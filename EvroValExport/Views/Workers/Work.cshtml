
@{

    ViewBag.Title = "Работа";
    AjaxOptions ajax = new AjaxOptions
    {
        UpdateTargetId = "workersList",
        Url = Url.Action("GetWork")

    };
}
<html>
<head>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>


<body>
    <div class=" contacts">
        <h2>Работа:</h2>

        @using (Ajax.BeginForm(ajax))
        {
            <div class=" row" id=" find">
                <div class=" col-sm-3 input-group ">
                    <input type="text" value=" @ViewBag.filter" name="filter" class=" form-control" placeholder="Ведите наименование работы" />
                    <span class=" input-group-btn">
                        <button type="submit" class=" btn btn-default">Поиск</button>
                    </span>
                </div>
            </div>

            <table class="table">

                <tr>
                    <th>
                        Наименование работы 
                    </th>
                    <th>
                        Оплата за час
                    </th>
                    <th></th>
                </tr>
                <tbody id="workersList">
                    @Html.Action("GetWork")
                </tbody>


            </table>
        }
    </div>
</body>
</html>
