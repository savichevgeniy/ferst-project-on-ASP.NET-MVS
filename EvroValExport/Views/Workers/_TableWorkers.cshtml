@using EvroValExport.Models;

@model IEnumerable<Workers>
@{ 
    Layout = null;
}



@foreach (var item in Model)
{

<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FIO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Position)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalSalary)
    </td>
    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @style = "color:maroon;" }) |
        @Html.ActionLink("Подробно", "Details", new { id = item.Id }, new { @style = "color:maroon;" }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @style = "color:maroon;" })
    </td>
</tr>
}