@model IEnumerable<EvroValExport.Models.User>

@{
    ViewBag.Title = "Пользователи";
}

<div class="contacts">

    <h2>Пользователи</h2>
    <table class="table">
        <tr>
            <th>
                Должность
            </th>
            <th>
                ФИО
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @style = "color:maroon;" }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @style = "color:maroon;" })
                    </td>
                </tr>
            }
        }


    </table>
</div>
